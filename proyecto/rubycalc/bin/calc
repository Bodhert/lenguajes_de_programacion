#!/usr/bin/env ruby

require 'rubygems'
require 'calculator'
require 'calcex'

$stdout.print "> "
$stdout.flush

$calc = Calculator.new()

$calc.enviroment

text = gets



# ARGV.each do |v|
#   case v
#   when "-v"
#     puts v.to_i
#   end
# end
    
  begin
  puts "= " + $calc.eval(text).to_s
rescue ParseError
  puts "Parse Error"
rescue UnrecognizedTokenException
  puts "UnrecognizedTokenException"
rescue
  puts "Unkown exception"
end
